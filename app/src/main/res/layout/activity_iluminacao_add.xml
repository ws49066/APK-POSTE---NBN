<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colormenu"
    android:layout_gravity="center"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/colormenu"
        android:scrollbars="none"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/layout_part1"
            android:layout_width="match_parent"
            android:layout_height="836dp"
            android:background="@color/colormenu"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/text_atributos"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="100dp"
                android:inputType="text"
                android:text="-- ILUMINAÇÃO --"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="351dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="@drawable/border"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/texto_iluminacao"
                        android:layout_width="131dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="TIPO ILUMINAÇÃO: "
                        android:textColor="#FFFFFF"
                        android:textSize="15dp" />

                    <Spinner
                        android:id="@+id/tipoiluminacao"
                        android:layout_width="174dp"
                        android:layout_height="match_parent"
                        android:backgroundTint="#FFF44336"
                        android:entries="@array/tipodeIluminicao"
                        android:gravity="center"
                        android:selectAllOnFocus="true"
                        android:textAlignment="center" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/texto_proprietario"
                        android:layout_width="131dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:text="PROPRIETARIO: "
                        android:textColor="#FFFFFF"
                        android:textSize="15dp" />

                    <Spinner
                        android:id="@+id/spinnerproprietario"
                        android:layout_width="172dp"
                        android:layout_height="match_parent"
                        android:backgroundTint="#FFF44336"
                        android:entries="@array/donoilumincao"
                        android:gravity="center"
                        android:textAlignment="center" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/tipoproprietario"
                        android:layout_width="132dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="T. Proprietario: "
                        android:textColor="#FFFFFF"
                        android:textSize="15dp" />

                    <Spinner
                        android:id="@+id/tipoproprispinner"
                        android:layout_width="172dp"
                        android:layout_height="match_parent"
                        android:backgroundTint="#FFF44336"
                        android:entries="@array/tipodono"
                        android:gravity="center"
                        android:textAlignment="center" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/labeltipolampada"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="TIPO DE LAMPADA: "
                        android:textColor="#FFFFFF"
                        android:textSize="15dp" />

                    <Spinner
                        android:id="@+id/tipolampada"
                        android:layout_width="177dp"
                        android:layout_height="match_parent"
                        android:backgroundTint="#FFF44336"
                        android:entries="@array/tipodelampada"
                        android:gravity="center"
                        android:textAlignment="center" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/labelpotencia"
                        android:layout_width="131dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="POTENCIA: "
                        android:textColor="#FFFFFF"
                        android:textSize="15dp" />

                    <Spinner
                        android:id="@+id/potenciaspinner"
                        android:layout_width="177dp"
                        android:layout_height="match_parent"
                        android:backgroundTint="#FFF44336"
                        android:entries="@array/potencialuz"
                        android:gravity="center"
                        android:textAlignment="center" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="382dp"
                android:layout_height="85dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">



                <Button
                    android:id="@+id/btn_cancelar_iluminacao"
                    android:layout_width="172dp"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/bordercancelar"
                    android:text="CANCELAR"
                    android:textColor="#FF0000"
                    android:textSize="7pt" />

                <Button
                    android:id="@+id/btn_cadastrar_iluminacao"
                    android:layout_width="172dp"
                    android:layout_height="69dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/borderconfirmar"
                    android:text="CADASTRAR"
                    android:textColor="#00b034"
                    android:textSize="7pt" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>