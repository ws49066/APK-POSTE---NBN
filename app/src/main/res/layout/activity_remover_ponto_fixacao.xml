<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:gravity="center"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/layout_atributos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">


            <TextView
                android:id="@+id/text_atributos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:inputType="text"
                android:text="-- REMOVER PONTO --"
                android:textAlignment="center"
                android:textColor="#111b31"
                android:textSize="20dp"
                android:textStyle="bold" />

            //----------------PONTO DE FIXACAO LAYOUT ------------------------------------------

            <ListView
                android:id="@+id/list_item_ponto"
                android:layout_width="match_parent"
                android:layout_height="500dp">

            </ListView>


            <LinearLayout
                android:layout_width="382dp"
                android:layout_height="85dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/voltar"
                    android:layout_width="360dp"
                    android:layout_height="69dp"
                    android:layout_gravity=""
                    android:layout_margin="10dp"
                    android:background="@drawable/borderconfirmar"
                    android:gravity="center"
                    android:text="Voltar"
                    android:textColor="#00b034"
                    android:textSize="7pt" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>