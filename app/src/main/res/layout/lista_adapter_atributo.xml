<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#111b31"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="117dp"
        android:layout_height="wrap_content"
        android:background="@drawable/borderetangular"
        android:gravity="center">

        <TextView
            android:id="@+id/Tipoposte_texto"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="Aquariquara"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="6pt" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="117dp"
        android:layout_height="wrap_content"
        android:background="@drawable/borderetangular"
        android:gravity="center">

        <TextView
            android:id="@+id/tipoaerea_texto"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="Aquariquara"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="6pt" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="117dp"
        android:layout_height="wrap_content"
        android:background="@drawable/borderetangular"
        android:gravity="center">

        <TextView
            android:id="@+id/redemedia_texto"
            android:layout_width="131dp"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="Aquariquara"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="6pt" />
    </LinearLayout>

  <LinearLayout
      android:visibility="invisible"
        android:background="@drawable/borderetangular"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/RemoveSuporte"
            android:layout_width="35dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_remove_black_24dp"
            android:clickable="true"
            android:onClick="delete_suporte"
            android:textColor="#FFF" />
    </LinearLayout>



</LinearLayout>